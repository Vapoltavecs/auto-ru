{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": "src",
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@app/*": ["./app/*"],
      "@api/*": ["./shared/api/*"],
      "@assets/*": ["./app/assets/*"],
      "@shared/*": ["./shared/*"],
      "@store/*": ["./app/store/*"],
      "@pages/*": ["./pages/*"],
      "@widgets/*": ["./widgets/*"]
    }
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
